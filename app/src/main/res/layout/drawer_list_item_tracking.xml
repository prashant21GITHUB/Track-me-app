<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:clickable="true">

    <TextView
        android:id="@+id/tracked_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444"
        android:text="number"
        android:clickable="true"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/focus"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/per_contact_switch"
        android:layout_marginRight="10dp"
        android:src="@drawable/focus_2" />

    <Switch
        android:id="@+id/per_contact_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/delete_contact_image"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:id="@+id/delete_contact_image"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/delete_3" />

</RelativeLayout>
