    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/averia_sans_libre"
        android:text="Sharing location with"
        android:textColor="#336612"
        android:textSize="20sp" />

        <ImageButton
            android:id="@+id/add_share_contact_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/add_icon_2" />
    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/expandable_sharing_contacts_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ExpandableListView>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="#99aa99" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/aldrich"
        android:text="You are tracking"
        android:textColor="#1b4a6d"
        android:textSize="18sp" />
        <ImageButton
            android:id="@+id/add_track_contact_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/add_icon_2" />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expandable_tracking_contacts_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ExpandableListView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/aldrich"
            android:text="Groups"
            android:textColor="#1b4a6d"
            android:textSize="18sp" />
        <ImageButton
            android:id="@+id/add_group_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/add_group" />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expandable_groups_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ExpandableListView>

</LinearLayout>