<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/reg_form"
        android:background="#4A646C">

        <TextView
            android:id="@+id/reg_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fefedd"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/name_reg"
            android:layout_marginTop="20dp"
            android:hint="Your name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_header"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#dfdfdf"
            android:backgroundTint="#ababab"
            />

        <EditText
            android:id="@+id/mobile_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mobile number"
            android:inputType="number"
            android:maxLength="10"
            android:layout_below="@+id/name_reg"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#dfdfdf"
            android:backgroundTint="#ababab"/>

        <EditText
            android:id="@+id/reg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/mobile_reg"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#dfdfdf"
            android:backgroundTint="#ababab"/>

        <Button
            android:id="@+id/reg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/reg_pwd"
            android:layout_centerHorizontal="true"
            android:text="Register" />



        <ProgressBar
            android:id="@+id/progressBarReg"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true" />

    </RelativeLayout>
    <TextView android:id="@+id/lnkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Already Registered? Login here"
        android:layout_below="@+id/reg_form"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#223c88" />
</RelativeLayout>