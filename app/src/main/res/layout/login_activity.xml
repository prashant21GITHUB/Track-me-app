<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_form"
        android:background="#4A646C"
       >
        <TextView
            android:id="@+id/login_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fefedd"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/login_mobile"
            android:layout_marginTop="20dp"
            android:hint="Mobile number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_header"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="#ffffff"
            android:textColorHint="#dfdfdf"
            android:backgroundTint="#ababab"
            android:ems="10"
            />

        <EditText
            android:id="@+id/login_pwd"
            android:hint="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_mobile"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#dfdfdf"
            android:backgroundTint="#ababab"
            />
        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_pwd"
            android:text="Login" />



        <ProgressBar
            android:id="@+id/progressBarLogin"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView android:id="@+id/lnkRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_form"
        android:text="New to TrackMe? Register here"
        android:textSize="20dp"
        android:textColor="#223c88"/>
</RelativeLayout>