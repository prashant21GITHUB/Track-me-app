<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/quantum_bluegrey700"
        android:layout_alignParentTop="true"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/header"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Group name"
            android:layout_weight="1"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:layout_gravity="end"
            android:maxWidth="100dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:textSize="18sp" />

    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/quantum_bluegrey700"
        android:layout_margin="2dp"
        android:layout_below="@+id/header"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/group_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_margin="10dp"
        android:layout_above="@+id/btns_layout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/btns_layout">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/quantum_white_text"
            android:background="@color/quantum_bluegrey700"
            android:text="Cancel" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/quantum_white_text"
            android:background="@color/quantum_bluegrey700"
            android:text="Confirm" />

    </LinearLayout>



</RelativeLayout>