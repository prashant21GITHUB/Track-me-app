<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/quantum_bluegrey700"
        android:layout_alignParentTop="true"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/group_name"
        android:layout_marginEnd="-5dp"
        android:layout_toStartOf="@+id/ok_btn"
        android:text="Group"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Group name"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/quantum_bluegrey700"
        android:layout_margin="2dp"
        android:layout_below="@+id/group_name"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/group_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_margin="10dp"
        android:layout_above="@+id/cancel_btn"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:text="Cancel" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cancel_btn"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text="Confirm" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_below="@+id/ok_btn"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/quantum_googgreen900"
       />

</RelativeLayout>